{
    "name": "VinkiusLabs/trilean",
    "description": "Next-generation ternary logic engine for Laravel with decision pipelines, balanced ternary math and expressive ergonomics.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Renato Marinho",
            "email": "renato@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "VinkiusLabs\\Trilean\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VinkiusLabs\\Trilean\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "VinkiusLabs\\Trilean\\TernaryLogicServiceProvider"
            ],
            "aliases": {
                "Trilean": "VinkiusLabs\\Trilean\\Facades\\Trilean"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}